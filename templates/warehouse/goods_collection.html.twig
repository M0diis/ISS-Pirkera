{% extends 'wh_base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row g-3 align-items-center">
            <div class="col-md-12">
                {% if errors %}
                    <div class="alert alert-danger" role="alert">
                        {% for error in errors %}
                            {{ error }} <br>
                        {% endfor %}
                    </div>
                {% elseif imported %}
                    <div class="alert alert-info" role="alert">
                        Krovinys sėkmingai išsaugotas.
                    </div>
                {% endif %}
                <form method="post">
                    <div class="form-control-sm">
                        <label for="pavadinimas">Pavadinimas</label>
                        <input type="text" class="form-control" name="pavadinimas" id="pavadinimas" placeholder="Pavadinimas">
                    </div>
                    <div class="form-control-sm">
                        <label for="kiekis">Kiekis</label>
                        <input type="number" class="form-control" name="kiekis" id="kiekis" placeholder="Kiekis">
                    </div>
                    <button type="submit" class="btn btn-primary">Išsaugoti</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block navigation %}
    {{ parent() }}
{% endblock %}

