{% extends 'clerk/baseClerk.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {% if name %}
        <h1>Searching for {{ name }}</h1>
    {% else %}
        <h1>Listing all products</h1>
    {% endif %}
    <form class="form" method="POST">
        <label for="name">Product name to search for:</label>
        <input type="text" class="form-control" id="name" name="name" />
        <button type="submit" class="mt-3 mr-2 mb-3 btn btn-primary">Search</button>
    </form>
    {% if products %}
    <table class="table">
        <thead>
            <th>Barcode</th>
            <th>Name</th>
            <th>Count</th>
        </thead>
        <tbody>
            {% for row in products %}
                <tr>
                    <td>{{ row.id }}</td>
                    <td>{{ row.pavadinimas }}</td>
                    <td>{{ row.kiekis }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}
{% endblock %}