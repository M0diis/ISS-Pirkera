{% extends 'clerk/baseClerk.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <h1>Coupon creation</h1>
    {% if errors %}
        <ul>
        {% for error in errors %}
            <li>{{ error }}</li>
        {% endfor %}
        </ul>
    {% endif %}
    <form class="form" method="POST">
        <div class="form-group m-3">
            <label for="email">Client email:</label>
            <input type="text" class="form-control" id="email" name="email" />
        </div>
        <div class="form-group m-3">
            <label for="cost">Coupon worth:</label>
            <input type="number" class="form-control" id="cost" name="cost" />
        </div>
        <div class="form-group m-3">
            <label for="clerk_id">Clerk ID:</label>
            <input type="text" class="form-control" id="clerk_id" name="clerk_id" />
        </div>
        <button type="submit" class="mt-3 mr-2 mb-3 btn btn-primary">Create coupon</button>
    </form>
{% endblock %}