{% extends 'clerk/baseClerk.html.twig' %}

{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <h1>Warehouse order acceptance</h1>
    {% if errors %}
        <ul>
        {% for error in errors %}
            <li>{{ error }}</li>
        {% endfor %}
        </ul>
    {% endif %}
    <form class="form" method="POST">
        <div class="form-group m-3">
            <label for="code">Order number:</label>
            <input type="number" class="form-control" id="code" name="code" />
        </div>
        <div class="form-group m-3">
            <label for="state">New order state:</label>
            <select class="form-select" id="state" name="state">
                {% for state in states %}
                    <option value="{{ state.state }}">{{ state.name }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="mt-3 mr-2 mb-3 btn btn-primary">Update order</button>
    </form>
{% endblock %}